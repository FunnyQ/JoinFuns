<div class="container">
<%= form_for @event do |f| %>

<div >
<%= f.label :title, "title" %>
<%= f.text_field :title  %>
</div>

<%= f.label :hoster, "hoster" %>
<%= f.text_field :hoster %>

<%= f.label :address, "address" %>
<%= f.text_field :address %>


	<div class="row">
		<div class='col-sm-6'>
			<div class="form-group">
				<div class='input-group date' id='dateeee'>
					<%= f.label :start_time, "start_time" %>
					<%= f.text_field :start_time  %>
					<span class="input-group-addon">
					<span class="glyphicon glyphicon-calendar"></span>
					</span>
				</div>
			</div>
		</div>
	

		<div class='col-sm-6'>
			<div class="form-group">
				<div class='input-group date' id='dateeee2'>
					<%= f.label :end_time, "end_time" %>
					<%= f.text_field :end_time  %>
					<span class="input-group-addon">
					<span class="glyphicon glyphicon-calendar"></span>
					</span>
				</div>
			</div>
		</div>
	</div>


<%= f.datetime_select :start_time, :ampm => true, :minute_step => 15 %>
<%= f.label :description, "Description" %>
<%= f.text_area :description %>

<%= f.submit "Create" %>



<% end %>
</div>

<%= content_for :handwrite_js do %>
 <script>
 $("#dateeee").datetimepicker()
 $("#dateeee2").datetimepicker()
 </script>
<% end %>
 