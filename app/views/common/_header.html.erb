<!-- header -->
<nav class="main-navibar">
  <%= link_to events_path, class: 'logo-wrapper', :'data-no-turbolink' => true do %>
    <%= image_tag 'logo-white@2x.png' %>
  <% end %>

  <div class="main-menu">
    <ul>
      <li><%= link_to 'Subject', subjects_path %></li>
      <li><%= link_to 'Create New', new_event_path %></li>
      <li class='user-menu-trigger'>
        <a href="#">
          <div class="user-avatar">

            <%= image_tag current_user.image, class: 'responsive-img circle' %>

          </div>
          <span class="user-name"><%= current_user.name%></span>
        </a>
      </li>
    </ul>
  </div>
</nav>

<div class="main-function-bar-wrapper">
  <div class="filter-trigger" data-behavior="filter-trigger">
    <span>Filter</span><i class="material-icons right" data-behavior="icon">expand_more</i>
  </div>
  <form action="#">
  <%= form_tag events_path, :method => :get do %>
    <div class="search-form-wrapper">
      <div class="search-form-input">
        <input type="text" placeholder="Title | DM | Time | Subject">
        <div class="search-button">
          <button><i class="material-icons">search</i></button>
        </div>
      </div>
      <div class="short-button">
        <a href="#">熱門排序</a>
        <a href="#">時間排序</a>
      </div>
    </div>
  </form>
  <% end %>
</div>
